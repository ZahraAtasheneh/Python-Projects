import random





class Puppy:
    info = 'the cutest animal on earth'

    def __init__(self, name):
        print('I\'m HAPPY!')
        self.favourite_number = random.randint(1,25)
        self.name = name
    
    def greeting(self):
        print(f'Heya! I\'m {self.name} and my favorite number is {self.favourite_number}!')


Puppy1 = Puppy('Harry')
Puppy10 = Puppy('Sally')


Puppy1.greeting()
Puppy10.greeting()
